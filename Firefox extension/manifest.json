{

  "manifest_version": 2,
  "name": "Search in YouTube",
  "short_name": "Search in YouTube",
  "author": "Aivar Loopalu",
  "homepage_url": "https://github.com/loopalu/youtube-search",
  
  "description": "Search selected text in YouTube.",
  "version": "1.0",
  
  "icons": {
	"16": "icons/icon16.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
  },
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
	"contextMenus", 
	"tabs"
  ],
  
  
  "browser_action": {
    "default_title": "Search in Youtube"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "{6cb1bbc1-0dbf-44eb-bced-223b6c261f95}"
    }
  }
}
